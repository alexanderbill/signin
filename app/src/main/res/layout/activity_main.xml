<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/thisin"
        android:enabled="true"
        android:layout_marginBottom="20dp"
        android:background="@color/button_selector"
        android:text="录入名单" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/thissign"
        android:enabled="true"
        android:layout_marginBottom="20dp"
        android:background="@color/button_selector"
        android:text="报名签到" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/thisout"
        android:enabled="true"
        android:layout_marginBottom="20dp"
        android:background="@color/button_selector"
        android:text="签到数据导出" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/query"
        android:visibility="gone"
        android:enabled="false"
        android:layout_marginBottom="20dp"
        android:background="@color/button_selector"
        android:text="考勤查询" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/total"
        android:visibility="gone"
        android:text="录入总表" android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/button_selector"
        android:layout_height="wrap_content" />

</LinearLayout>
